{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "A simple todo API",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start:dev": "nodemon --watch src --exec babel.node src",
    "start": "node dist/index.js",
    "build": "rimraf dist && babel src/ --copy-files --out-dir dist",
    "migrate": "knex migrate:latest --knexfile src/knexfile.js",
    "rollback": "knex migrate:rollback --knexfile src/knexfile.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "camelize": "^1.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.2",
    "joi": "^17.2.1",
    "knex": "^0.21.5",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "pg": "^8.3.3",
    "rimraf": "^3.0.2",
    "snakeize": "^0.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5"
  }
}
